<tr id="<%= dom_id guest %>">
  <td>
    <%= guest.name %>
  </td>
   <td>
    <% if guest.status == "coming" %>
      מגיע
    <% else %>
      לא מגיע
    <% end %>
  </td>
   <td>
    <%= guest.amount %>
  </td>
   <td>
    <%= guest.people %>
  </td>
   <td>
    <% if guest.is_sleeping %>
      כן
    <% else %>
      לא
    <% end %>
  </td>
  <td>
    <%= link_to "עריכה", edit_guest_path(guest) %>
  </td>
  <!--
  <td>
  <%# button_to "Destroy", @guest, method: :delete %>
  </td>
  -->
</tr>