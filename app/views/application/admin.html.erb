<h1>אורחים</h1>

<div id="guests" data-controller="hello">
<table id='table'>
  <thead>
    <th>שם האורח.ת</th>
    <th>מגיע.ה?</th>
    <th>כמה מגיעים?</th>
    <th>מי מגיע?</th>
    <th>האם נשארים לישון?</th>
  </thead>
  <tbody>
    <% @guests.order(:created_at).each do |guest| %>
      <%= render guest %>
    <% end %>
  </tbody>
</table>
<%= link_to( 'ייצוא אורחים' ,{ :controller => :guests, :action => :export_csv, format: 'csv'}, class: "link" ) %>
</div>
